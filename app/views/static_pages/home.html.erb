<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/post_form' %>
      </section>
    </aside>
  
  <div class="span8">
      <h3>Вопросы</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center hero-unit">
  <h1>Добро пожаловать в Stackoverflow(MLSDev)</h1>

  <h2>
    Это тестовое задания для
    <a href="www.mlsdev.com">MLSDev</a>
    Приложения Stackoverflow
  </h2>

  <%= link_to "Присоединяйтесь!", signup_path, class: "btn btn-large btn-primary" %>
</div>
<% end %>
